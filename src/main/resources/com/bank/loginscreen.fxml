<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <BorderPane>
      <bottom>
         <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" spacing="50.0">
            <children>
               <Button fx:id="loginButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Login Screen" />
               <Button fx:id="signupButton" mnemonicParsing="false" text="Signup Screen" />
            </children>
            <BorderPane.margin>
               <Insets bottom="20.0" />
            </BorderPane.margin>
         </HBox>
      </bottom>
      <center>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
               <TextField fx:id="username" promptText="Username" />
               <PasswordField fx:id="password" promptText="Password" />
               <Button fx:id="login" mnemonicParsing="false" text="Login" />
            </children>
            <BorderPane.margin>
               <Insets left="50.0" right="50.0" />
            </BorderPane.margin>
         </VBox>
      </center>
   </BorderPane>
</Scene>
